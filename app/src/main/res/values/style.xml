<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="app_txt_h1" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">65dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="start.txt.nomJoueur" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="start.layout.txt.nomJoueur" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/start_margin_top_txt</item>
        <item name="android:layout_marginStart">@dimen/start_margin_horizontal_txt</item>
        <item name="android:layout_marginEnd">@dimen/start_margin_horizontal_txt</item>
    </style>

    <style name="quiz.txt.score" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/quiz_font_size_score</item>
    </style>

    <style name="quiz.txt.nomJoueur" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="quiz.txt.questions" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/quiz_font_qst</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/quiz_space_bt</item>
        <item name="android:layout_marginBottom">@dimen/quiz_space_bt</item>
    </style>

    <style name="quiz.bt.jeu" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">@dimen/quiz_bt_jeu</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="config_txt_titre" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="config_bt_valider" parent="Widget.Material3.Button.TonalButton">
        <item name="backgroundTint">@color/vert_tres_clair</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
    </style>

    <style name="config_slide" parent="Widget.Material3.Slider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
    </style>
</resources>